rules_version = '2';

// Simplified storage rules for development
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write images
    match /images/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write thumbnails
    match /thumbnails/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read any avatar, write only their own
    match /avatars/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }
  }
}