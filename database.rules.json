{
  "rules": {
    "presence": {
      "$userId": {
        ".read": true,
        ".write": "$userId === auth.uid"
      }
    },
    "typing": {
      "$conversationId": {
        "$userId": {
          ".read": true,
          ".write": "$userId === auth.uid"
        }
      }
    },
    "notifications": {
      "$userId": {
        ".read": "$userId === auth.uid",
        ".write": false,
        "$notificationId": {
          ".read": "$userId === auth.uid",
          ".write": false
        }
      }
    }
  }
}